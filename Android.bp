subdirs = [
    "test"
]

libvintf_flags = [
    "-Wall",
    "-Werror",
]

cc_library {
    name: "libvintf",
    host_supported: true,
    cflags: libvintf_flags,
    shared_libs: [
        "libbase",
        "liblog",
        "libselinux",
        "libtinyxml2",
    ],
    export_include_dirs: ["include"],
    local_include_dirs: ["include/vintf"],

    srcs: [
        "parse_string.cpp",
        "parse_xml.cpp",
        "CompatibilityMatrix.cpp",
        "HalManifest.cpp",
        "KernelConfigTypedValue.cpp",
        "RuntimeInfo.cpp",
        "ManifestHal.cpp",
        "MatrixHal.cpp",
        "MatrixKernel.cpp",
        "TransportArch.cpp",
        "VintfObject.cpp",
    ],

    target: {
        linux: {
            shared_libs: [
                "libz-host",
            ],
        },
        android: {
            shared_libs: [
                "libutils",
                "libz"
            ],
            cflags: ["-DLIBVINTF_TARGET"],
        },
    }
}

cc_binary {
    name: "vintf",
    cflags: libvintf_flags,
    shared_libs: [
        "libvintf",
    ],
    srcs: [
        "main.cpp"
    ],
}

cc_binary_host {
    name: "assemble_vintf",
    cflags: libvintf_flags,
    shared_libs: [
        "libvintf"
    ],
    srcs: [
        "assemble_vintf.cpp"
    ],
}
